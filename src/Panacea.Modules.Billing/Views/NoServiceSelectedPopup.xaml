<UserControl
    x:Class="Panacea.Modules.Billing.Views.NoServiceSelectedPopup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Panacea.Modules.Billing.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:multilinguality="clr-namespace:Panacea.Multilinguality;assembly=Panacea.Multilinguality"
    xmlns:pcontrols="clr-namespace:Panacea.Controls;assembly=Panacea.Controls"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <TextBlock
            Margin="10"
            VerticalAlignment="Center"
            FontSize="{DynamicResource FontSize-X-Large}"
            Text="{multilinguality:Translate 'You must select at least 1 Package or Service in order to continue.',
                                             'Billing'}"
            TextAlignment="Center" />
    </Grid>
</UserControl>
