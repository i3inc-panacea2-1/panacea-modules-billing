<UserControl
    x:Class="Panacea.Modules.Billing.Views.SettingsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Panacea.Modules.Billing.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mi="clr-namespace:Panacea.Controls;assembly=Panacea.Controls"
    xmlns:multilinguality="clr-namespace:Panacea.Multilinguality;assembly=Panacea.Multilinguality"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UniformGrid
        Margin="10"
        VerticalAlignment="Center"
        Rows="1">

        <Button
            Name="btnBuy"
            Margin="3"
            Background="#58b4db"
            Content="{multilinguality:Translate 'Buy service',
                                                'Billing'}"
            FontSize="{DynamicResource FontSize-Normal}"
            Style="{DynamicResource PrimaryButton}" />
    </UniformGrid>
</UserControl>
